---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import OpenGraph from '../components/OpenGraph.astro';
import SkipLink from '../components/SkipLink.astro';
import { SITE } from '../data/site';
import type { MetaOG, PageMeta } from '../models/page-meta';
import '../styles/style.css';

export interface Props {
  pageMeta: PageMeta;
  pageUrl?: string;
  noIndex?: boolean;
}

const {
  pageMeta: { title, description, og },
  pageUrl,
  noIndex = false,
} = Astro.props;

const openGraphProps: MetaOG = {
  title: og?.title ?? title ?? SITE.name,
  description: og?.description ?? description,
  image: {
    url: `${import.meta.env.SITE}images/cover.jpg`,
    width: '1200',
    height: '630',
  },
  ...og,
};
---

<!DOCTYPE html>
<html lang="en" dir="ltr" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `${title} - ${SITE.name}` : `${SITE.name}`}</title>
    <script is:inline src="/js/theme.js" type="module"></script>
    <meta name="description" content={description} />
    {noIndex && <meta name="robots" content="noindex" />}
    <OpenGraph {...openGraphProps} />
    <link rel="icon" type="image/svg+xml" href="/logo/favicon.svg" />
    <link rel="icon" sizes="any" href="/logo/favicon.ico" />
    <link rel="apple-touch-icon" href="/logo/favicon-180.png" />
    <link rel="manifest" href="/manifest.json" />
    <link
      rel="preload"
      href="/fonts/Inter-Regular-subset.woff2"
      crossorigin
      as="font"
      type="font/woff2"
    />
    <link
      rel="preload"
      href="/fonts/Inter-Bold-subset.woff2"
      crossorigin
      as="font"
      type="font/woff2"
    />
  </head>
  <body class="bg-background text-font-primary">
    <SkipLink />
    <Header pageUrl={pageUrl} />
    <main id="main" class="container">
      <slot />
    </main>
    <div class="mt-16"></div>
    <Footer />
  </body>
</html>
