---
import type { WorkExpItem } from '../data/work-experience';

export interface Props extends WorkExpItem {}

const {
  company,
  dateEnd,
  dateStart,
  location,
  title,
  projects,
  class: className,
} = Astro.props;
---

<div class={className}>
  <h3 class="text-primary font-bold text-base mb-2">
    {company}{location ? `- ${location}` : ''}
  </h3>
  <div class="text-font-secondary text-xs mb-2">
    <div>
      <time>{dateStart}</time> - <time>{dateEnd}</time>
    </div>
    {title && <p>{title}</p>}
  </div>
  <ul class="grid gap-6">
    {
      projects.map(({ description, technologies }) => (
        <li>
          <p class="mb-2">{description}</p>
          <section class="flex gap-[10px] flex-wrap">
            <h4 class="sr-only">Technologies:</h4>
            {technologies.map((label) => (
              <span class="text-xs lg:text-sm py-1 px-3 rounded-md border border-accent text-accent">
                {label}
              </span>
            ))}
          </section>
        </li>
      ))
    }
  </ul>
</div>
