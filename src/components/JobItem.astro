---
import type { WorkExpItem } from "../data/work-experience";

export interface Props extends WorkExpItem {
  className?: string;
}

const { company, dateEnd, dateStart, location, title, projects, className } =
  Astro.props;
---

<article class={className}>
  <h3 class="text-primary font-bold text-base mb-3">
    {company}{location ? `- ${location}` : ""}
  </h3>
  <div class="text-font-secondary text-xs mb-3">
    <div>
      <time>{dateStart}</time> - <time>{dateEnd}</time>
    </div>
    {title && <p>{title}</p>}
  </div>
  <ul class="grid gap-10">
    {
      projects.map(({ description, technologies }) => (
        <li>
          <p class="mb-4">{description}</p>
          <div class="flex gap-[10px] flex-wrap">
            {technologies.map((label) => (
              <span class="text-xs py-1 px-3 rounded-md border border-accent text-accent">{label}</span>
            ))}
          </div>
        </li>
      ))
    }
  </ul>
</article>
