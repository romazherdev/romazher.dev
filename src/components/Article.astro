---
interface Props {
  url?: string;
  title: string;
  description: string;
}

const { url, title, description } = Astro.props;
---

<article
  class="relative rounded-lg border-2 px-4 py-3 border-decorative hover:border-primary"
>
  <h3 class="text-2xl font-bold">
    <a
      href={url}
      class="before:content-[''] before:absolute before:inset-0 no-underline text-primary"
    >
      {title}
    </a>
  </h3>
  <p class="mt-2">{description}</p>
</article>
