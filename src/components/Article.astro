---
interface Props {
  title: string;
  description: string;
  url: string;
  class?: string;
}

const { url, title, description, class: className } = Astro.props;
---

<article
  class:list={new Set([
    'relative rounded-lg border-2 px-4 py-3 border-decorative hover:border-primary',
    className,
  ])}
>
  <h3 class="text-2xl font-bold">
    <a
      href={url}
      class="before:content-[''] before:absolute before:inset-0 no-underline text-primary"
    >
      {title}
    </a>
  </h3>
  <p class="mt-2">{description}</p>
</article>
